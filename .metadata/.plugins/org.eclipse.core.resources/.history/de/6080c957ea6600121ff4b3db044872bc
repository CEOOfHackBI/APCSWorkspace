	private static double[] temp;
	
	public static void sort(double[] a)
	{
		temp=new double[a.length];
		recursiveSort(a,0,a.length-1);
	}
	
	private static void recursiveSort(double[] a,int from, int to)
	{
		if(to-from<2)
		{
			if(to>from&&a[from]>a[to])
			{
				double temp=a[from];
				a[from]=a[to];
				a[to]=temp;
			}
		}
	}
	
